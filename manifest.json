{
    "manifest_version": 2,
    "name" : "PlayShare",
    "description": "App to play together youtibe vid√©o",
    "version": "1.0",
    "permissions": [
        "http://*/*",
        "https://*/*",
        "tabs",
        "storage",
        "activeTab",
        "background",
        "notifications",
        "activeTab",
        "webNavigation"



    ],
    "browser_action":{
        "default_icon": "./youtube.png",
        "default_popup" : "popup.html"
    },
    "icons": {
        "128": "./youtube.png"
    },
    
    "content_scripts": [
        {
          "matches": ["https://www.youtube.com/watch*"],
          "run_at": "document_end",
          "js": ["js/youtube.js"]
        }
      ]

        

}